<div class="container-fluid">
  <div class="bg-dark content">
    <h3 class="text-center  text-white col-12">Leader Board</h3>
    <div class="container my-4 py-4 bg-dark col-12">
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Rank</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Score</th>
            <th scope="col">Easy</th>
            <th scope="col">Medium</th>
            <th scope="col">Hard</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <% if !user.admin? %>
            <tr class="justify-content-center">
              <td><%= user.rank %></td>
              <td>
                <div class="zoom float-left">
                  <%= link_to user.username,user_path(user.id), class: "text-white text-decoration-none"%></td>
                </div>
              <td><%= user.email %></td>
              <td><%= user.score %></td>
              <td><%= user.easysolved %></td>
              <td><%= user.mediumSolved %></td>
              <td><%= user.difficultSolved %></td>
              
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%# (10*user.easysolved)+(20*user.mediumSolved)+(30*user.difficultSolved) %>