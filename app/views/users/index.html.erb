<h3 class="text-center m-4 text-white">Leader Board</h3>
<div class="container my-4 py-4 bg-dark">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Rank</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Easy</th>
        <th scope="col">Medium</th>
        <th scope="col">Hard</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="justify-content-center">
          <td>1</td>
          <td>
            <div class="zoom float-left">
              <%= link_to user.username,user_path(user.id), class: "text-white text-decoration-none"%></td>
            </div>
          <td><%= user.email %></td>
          <td><%= user.easysolved %></td>
          <td><%= user.mediumSolved %></td>
          <td><%= user.difficultSolved %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>